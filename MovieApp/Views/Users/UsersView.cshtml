@model UserViewModel

<h2>Users</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Not Followed Users</h4>

        @if (Model.NotFollowedUsers != null && Model.NotFollowedUsers.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.NotFollowedUsers)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>
                                <form method="post" action="@Url.Action("FollowUser", "Users")">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-primary">Follow</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No not followed users.</p>
        }
    </div>
    <div class="col-md-6">
        <h4>Followed Users</h4>

        @if (Model.FollowedUsers != null && Model.FollowedUsers.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.FollowedUsers)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                              <td>
            <form method="post" action="@Url.Action("UnfollowUser", "Users")">
                <input type="hidden" name="userId" value="@user.Id" />
                <button type="submit" class="btn btn-danger">Unfollow</button>
            </form>
        </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No followed users.</p>
        }
    </div>
    </div>
