@using MovieApp.Areas.Identity.Data;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Movie App</p>
    
    @if (ViewData["LoggedInUser"] != null)
    {
        var loggedInUser = ViewData["LoggedInUser"] as User;
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">User Information</h5>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h6>First Name:</h6>
                        <p>@loggedInUser.FirstName</p>
                    </div>
                    <div class="col-md-6">
                        <h6>Last Name:</h6>
                        <p>@loggedInUser.LastName</p>
                    </div>
                    <div class="col-md-12">
                        <h6>Email:</h6>
                        <p>@loggedInUser.Email</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
