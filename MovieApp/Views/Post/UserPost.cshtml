@if (Model != null && Model.Count > 0)
{
    @foreach (var post in Model)
    {
        <div class="row">
            
            
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="card-text">@post.Content</p>
                            <p class="card-text">Created At: @post.CreatedAt</p>
                            <p class="card-text">User ID: @post.UserId</p>
                        </div>
                    </div>
                </div> 
            
        </div>
    }
}
else
{
        <p>Takip ettiğiniz kullanıcıların henüz bir postu bulunmamaktadır.</p>
}